@import 'reset-normalize'
@require 'global-vars'

/**
 * Box Sizing
 */

*,
*::before,
*::after
  box-sizing: inherit


/**
 * Root
 */

html
  box-sizing: border-box
  font-size: 16px

body
  //background: $colors.
  //color: $colors.
  //font-family: $fontFamily
  font-size: 1rem

/**
 * Basic HTML element styles
 */

a
  outline: none
  text-decoration: none

button,
input,
select,
textarea
  outline: none
  border-radius: 0



@import 'mediaquery'
@import 'mixins'
@import 'module'